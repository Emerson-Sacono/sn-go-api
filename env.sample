########################################
# Base
########################################
APP_ENV=development
APP_NAME=sn-go-api
PORT=4010

APP_BASE_URL=https://snwebdevsolutions.com
API_PUBLIC_BASE_URL=https://api.snwebdevsolutions.com

########################################
# CORS
########################################
CORS_ALLOWED_ORIGINS=https://snwebdevsolutions.com,https://www.snwebdevsolutions.com,http://localhost:5500,http://127.0.0.1:5500

########################################
# HTTP Server
########################################
HTTP_READ_TIMEOUT_SEC=10
HTTP_WRITE_TIMEOUT_SEC=20
HTTP_IDLE_TIMEOUT_SEC=60
HTTP_SHUTDOWN_TIMEOUT_SEC=10

########################################
# Mongo (cluster separado)
# Use MONGODB_URI_* se quiser separar conex√µes
########################################
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster-url>/?retryWrites=true&w=majority
MONGODB_URI_AUTH=mongodb+srv://<user>:<password>@<cluster-url>/snweb-auth?retryWrites=true&w=majority
MONGODB_URI_BILLING=mongodb+srv://<user>:<password>@<cluster-url>/snweb-billing?retryWrites=true&w=majority
MONGODB_URI_CUSTOMERS=mongodb+srv://<user>:<password>@<cluster-url>/snweb-customers?retryWrites=true&w=majority

MONGODB_DB_AUTH=snweb-auth
MONGODB_DB_BILLING=snweb-billing
MONGODB_DB_CUSTOMERS=snweb-customers

########################################
